#::::::::::::::: Captura de pantalla en portapapel :::::::::::::::#
# Para que funcione esta opción, es necesario tener instalado xclip
# Pantalla completa
bindsym Print --release exec "scrot /tmp/'%F_%T.png' -e 'xclip -selection c -t image/png < $f'"

# Área seleccionada
bindsym Shift+Print --release exec "scrot -s /tmp/'select-%F_%T.png' -e 'xclip -selection c -t image/png < $f'"

#::::::::::::::: Guardar captura de pantalla completa :::::::::::::::#
bindsym $mod+Print --release exec "scrot -q 100 '%F_%H%M%S_$wx$h.png' -e 'mv $f /home/skynet/Datos/Capturas/'; sleep 1; exec notify-send -t 5000 --icon=/home/skynet/.icons/screenshot.png 'Captura de pantalla' 'guardada en: ~/Datos/Capturas'"

#::::::::::::::: Guardar captura de pantalla del área seleccionada :::::::::::::::#
bindsym $mod+Shift+Print --release exec "scrot -s -q 100 'Select_%F_%H%M%S_$wx$h.png' -e 'mv $f /home/skynet/Datos/Capturas/select'; sleep 1; exec notify-send -t 5000 --icon=/home/skynet/.icons/workspace.png 'Área seleccionda' 'guardada en: ~/Datos/Capturas/select'"

#::::::::::::::: Guardar captura de pantalla de la ventana enfocada :::::::::::::::#
bindsym Ctrl+Print --release exec "scrot -u -q 100 'Focus_%F_%H%M%S_$wx$h.png' -e 'mv $f /home/skynet/Datos/Capturas/focus'; sleep 1; exec notify-send -t 5000 --icon=/home/skynet/.icons/window.png 'Ventana enfocada' 'guardada en: ~/Datos/Capturas/focus'"

