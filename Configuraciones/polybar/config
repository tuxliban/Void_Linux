[module/date]
type = internal/date
interval = 1

date = "%a %b,%d"
date-alt = " %Y-%m-%d"

time = %H:%M:%S
time-alt = %H:%M

;format-prefix = 
;format-prefix-foreground = ${colors.foreground-alt}
format-underline = #0a6cf5

#label = %{F#00FFDE} %date% %{F#FFFFFF} %time%
label = %{F#00FFDE} %date% %{F#FFFFFF} %time%

