; Primer plano
foreground = #ffffff
foreground-alt = #555
bg_trans = #dd000000
primary = #ffb52a
secondary = #181D9A
alert = #ff0600

########## Barra ##########

[bar/top]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 15
;offset-x = 1%
;offset-y = 1%
radius = 3
fixed-center = true
bottom = false

